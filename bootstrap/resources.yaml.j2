---
apiVersion: v1
kind: Secret
metadata:
  name: markmckessock-com-tls
  namespace: kube-system
  annotations:
    cert-manager.io/alt-names: '*.markmckessock.com,markmckessock.com'
    cert-manager.io/certificate-name: markmckessock-com
    cert-manager.io/common-name: markmckessock.com
    cert-manager.io/ip-sans: ""
    cert-manager.io/issuer-group: ""
    cert-manager.io/issuer-kind: ClusterIssuer
    cert-manager.io/issuer-name: letsencrypt-production
    cert-manager.io/uri-sans: ""
  labels:
    controller.cert-manager.io/fao: "true"
type: kubernetes.io/tls
data:
  tls.crt: op://kubernetes/mmckessock-com-tls/tls.crt
  tls.key: op://kubernetes/mmckessock-com-tls/tls.key
---
apiVersion: v1
kind: Secret
metadata:
  name: cloudflare-tunnel-id-secret
  namespace: network
stringData:
  CLOUDFLARE_TUNNEL_ID: op://kubernetes/cloudflare/CLOUDFLARE_TUNNEL_ID